<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_parent_layout_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/poster_imageview_parent_grid"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true">

            <ProgressBar
                android:id="@+id/progress_bar_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />

            <ImageView
                android:id="@+id/poster_imageview_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </FrameLayout>

        <TextView
            android:id="@+id/title_textview_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poster_imageview_parent_grid"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>